<h3>Show Post</h3>
<div class="well">
<p>
	<strong>Url:</strong>
	<%= link_to @post.url, fix_url(@post.url) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.description %>
</p>

<%= link_to 'Back', posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>
</div>